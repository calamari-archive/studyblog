<%= form_for(@user) do |f| %>
  <%= f.hidden_field :group_id, :value => @group_id %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :username, :class => 'label' %>
    <%= f.text_field :username, :class => 'text', :autofocus => true %>
  </p>
  <p>
    <%= f.label :email, :class => 'label' %>
    <%= f.text_field :email, :class => 'text' %>
  </p>
  <p>
    <%= f.label :password, :class => 'label' %>
    <%= f.password_field :password, :class => 'text' %>
  </p>
  <p>
    <%= f.label :password_confirmation, :class => 'label' %>
    <%= f.password_field :password_confirmation, :class => 'text' %>
  </p>
  <p>
    <%= f.label :role, :class => 'label' %>
    <%= f.select :role, ['admin', 'moderator'], :selected => 'moderator' %>
  </p>
  <div class="actions">
    <button type="submit"><%=t '.button' %></button>
    <%= link_to t('actions.back'), users_path, :class => 'cancel' %>
  </div>
<% end %>
